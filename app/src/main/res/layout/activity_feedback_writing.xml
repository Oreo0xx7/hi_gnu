<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackWriting">

    <ImageButton
        android:id="@+id/img_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lo_support"
        app:layout_constraintEnd_toStartOf="@+id/tv_lo_support"
        app:layout_constraintStart_toStartOf="@+id/tv_fd"
        app:layout_constraintTop_toTopOf="@+id/tv_lo_support"
        app:srcCompat="@android:drawable/stat_sys_headset" />

    <TextView
        android:id="@+id/tv_lo_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_fd"
        app:layout_constraintEnd_toEndOf="@+id/tv_fd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Feedback Board"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/et_fd_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_fd_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_fd"
        app:layout_constraintStart_toStartOf="@+id/tv_fd"
        app:layout_constraintTop_toBottomOf="@+id/tv_fd" />

    <EditText
        android:id="@+id/et_fd_title"
        android:layout_width="363dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint='Please enter title.'
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_fd_nick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Please enter your nickname."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_fd_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_fd_title"
        app:layout_constraintTop_toBottomOf="@+id/et_fd_title" />

    <RadioButton
        android:id="@+id/fd_secret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Secret Posting"
        app:layout_constraintEnd_toEndOf="@+id/et_fd_nick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_fd_nick"
        app:layout_constraintTop_toBottomOf="@+id/et_fd_nick" />

    <EditText
        android:id="@+id/et_fd_con"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Please enter the contents."
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/fd_secret"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fd_secret"
        app:layout_constraintTop_toBottomOf="@+id/fd_secret" />

    <Button
        android:id="@+id/btn_new_feed"
        android:layout_width="163dp"
        android:layout_height="53dp"
        android:layout_marginBottom="40dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_fd_con"
        app:layout_constraintStart_toStartOf="@+id/et_fd_con"
        app:layout_constraintTop_toBottomOf="@+id/et_fd_con" />

</android.support.constraint.ConstraintLayout>